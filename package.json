{
	"author": "Luis Blanco <luisblanco1337@gmail.com>",
	"name": "3d-core-raub",
	"version": "3.6.0",
	"description": "An extensible Node3D core for desktop applications",
	"license": "MIT",
	"main": "index.js",
	"keywords": [
		"core",
		"3d",
		"node3d",
		"opengl",
		"webgl",
		"glfw",
		"graphics",
		"gl",
		"image"
	],
	"files": [
		"js",
		"index.js",
		"index.d.ts",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"node": ">=14.16.0",
		"npm": ">=6.14.1"
	},
	"scripts": {
		"eslint": "eslint .",
		"test": "jest --coverage=false --watch",
		"test-ci": "jest --coverage=false --verbose",
		"test-coverage": "rm -rf doc/jest && jest --coverage --silent"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/node-3d/3d-core-raub.git"
	},
	"jest": {
		"globalSetup": "<rootDir>/test/setup.js",
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.js"
		],
		"coverageDirectory": "doc/jest",
		"coverageReporters": [
			"lcov"
		],
		"collectCoverageFrom": [
			"**/*.js",
			"!**/*.test.js"
		]
	},
	"dependencies": {
		"addon-tools-raub": "5.3.x",
		"three": "0.137.x",
		"image-raub": "3.2.x",
		"glfw-raub": "4.6.x",
		"webgl-raub": "2.2.x"
	},
	"devDependencies": {
		"eslint": "7.23.0",
		"eslint-plugin-jest": "24.3.3",
		"eslint-plugin-node": "11.1.0",
		"jest": "26.6.3",
		"typescript": "4.2.4"
	}
}
